.Button
  background #fff
  border-radius 100px
  color rgba(0, 0, 0, 0.9)
  display block
  font-size 0.8em
  outline none
  overflow hidden
  padding 0.5em 0.8em
  position relative
  text-decoration none
  z-index 1

  &::before
    background #fff
    border 1px solid rgba(0, 0, 0, 0.9)
    border-radius 100px
    content ''
    height calc(100% - 2px)
    left 0
    position absolute
    top 0
    transition all 300ms ease-in-out
    width calc(100% - 2px)
    z-index -1

  &:active::before
  &:hover::before
    border-color rgba(255, 255, 255, 1)

  &::after
    background #fff
    border-radius 100px
    content ''
    height 100%
    left 0
    mix-blend-mode exclusion
    position absolute
    top 0
    transform translateX(-100%)
    transition all 200ms ease-in-out
    width 100%
    z-index 1

  &:active::after
  &:hover::after
    transform translateX(0)

  @media (min-width 568px)
    padding 0.8em 1.2em
