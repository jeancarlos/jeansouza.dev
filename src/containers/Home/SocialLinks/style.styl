.SociaLinks
  display flex
  flex-wrap wrap
  justify-content center
  list-style none
  opacity 0
  padding 0
  transform scale(0) translateY(-50px)
  transform-origin center top
  transition all 0.2s ease-in-out

  &-open
    opacity 1
    transform scale(1) translateY(0)

  .SociaLinks--ListItem
    margin 0 0.25em 0.5em
    position relative

    .Tooltip
      white-space nowrap
