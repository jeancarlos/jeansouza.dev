.SociaLinks
  display flex
  flex-wrap wrap
  justify-content center
  list-style none
  padding 0
  transform scale(0) translateY(-50px)
  transition all 0.2s ease-in-out
  opacity 0
  transform-origin center top

  &-open
    transform scale(1) translateY(0)
    opacity 1

  .SociaLinks--ListItem
    margin 0.5em
    position relative

    .Tooltip
      white-space nowrap
